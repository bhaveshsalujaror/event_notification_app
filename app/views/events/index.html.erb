<h1 class="text-center mt-3 mb-5">Events#index</h1>

<div class="container mt-4">  
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Create Event A</h2>
          <%= form_with(model: @event_a, url: create_event_a_path, method: :post) do |form| %>
            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>
            <div class="form-group mt-3">
              <%= form.submit 'Create Event A', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Create Event B</h2>
          <%= form_with(model: @event_b, url: create_event_b_path, method: :post) do |form| %>
            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control' %>
            </div>
            <div class="form-group mt-3">
              <%= form.submit 'Create Event B', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
